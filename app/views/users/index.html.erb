<% content_for :jquery do %>
	$('#new_user_form').submit(function(){
      $.post(
        $(this).attr('action'),
        $(this).serialize(),
        function(data){
          console.log('Data Received from the Ajax call', data);
          //put additional codes here to update html, etc.
          //for example things like
          $('#message').html(data.message);
        },
        "json"
      );
      return false;
    });
<% end %>
<div id="message"></div>
<form id="new_user_form" action="/users" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <label>Name: 
    <input type="text" name="users[name]" />
  </label>
  <label>Email:
    <input type="text" name="users[email]" />
  </label>
  <input type="submit" value="Submit a new user information" />
</form>